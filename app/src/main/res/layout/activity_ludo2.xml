<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frmMainLayout"
    android:background="@drawable/bg_gameplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="385dp"
            android:layout_height="385dp"
            android:layout_marginTop="@dimen/_80sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/playboard_bg" />

            <ImageView
                android:layout_width="370dp"
                android:layout_height="370dp"
                android:layout_centerInParent="true"
                android:src="@drawable/path_bg" />

            <ImageView
                android:id="@+id/pieseYellowOne"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_245sdp"
                android:src="@drawable/one_token" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/_124sdp"
                android:layout_marginTop="@dimen/_247sdp"
                android:src="@drawable/one_token" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/_117sdp"
                android:layout_marginTop="@dimen/_247sdp"
                android:src="@drawable/one_token" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_250sdp"
                android:src="@drawable/one_token" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/_10sdp"

        android:text="Play"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

</RelativeLayout>