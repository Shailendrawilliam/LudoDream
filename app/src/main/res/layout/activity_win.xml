<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.Win.WinActivity">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/bgprofile" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/top"
                android:layout_marginTop="-20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_centerInParent="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="?actionBarItemBackground"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/anim3" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="-70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:text="You Have Won â‚¹10000"
                            android:textColor="@color/white" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Your Rank - 1st"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp">

                            <ImageView
                                android:id="@+id/ivIcon11"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tvFst1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toRightOf="@+id/ivIcon11"
                                android:maxLines="1"
                                android:paddingRight="10dp"
                                android:shadowColor="#333333"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Rank"
                                android:textColor="#333333"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvName11"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toEndOf="@+id/tvFst1"
                                android:layout_toRightOf="@+id/ivIcon11"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:shadowColor="#333333"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Name"
                                android:textColor="#333333"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvScore1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toEndOf="@+id/tvName11"
                                android:maxLines="1"
                                android:shadowColor="#333333"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Score"
                                android:textColor="#333333"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toEndOf="@+id/tvScore1"
                                android:maxLines="1"
                                android:shadowColor="#333333"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Price"
                                android:textColor="#333333"
                                android:textSize="@dimen/_12sdp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/circle_bg">

                            <ImageView
                                android:id="@+id/ivIcon12"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:src="@drawable/plcholder_bg" />

                            <TextView
                                android:id="@+id/tvFst2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toRightOf="@+id/ivIcon12"
                                android:maxLines="1"
                                android:paddingRight="10dp"
                                android:shadowColor="#DFB032"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="1sp"
                                android:textColor="#FBBE1C"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tvName12"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toEndOf="@+id/tvFst2"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:shadowColor="#ffffff"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Suraj Kumar Verma "
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tvScore2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/tvName12"
                                android:maxLines="1"
                                android:shadowColor="#DFB032"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="999"
                                android:textColor="#FBBE1C"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/tvScore2"
                                android:maxLines="1"
                                android:shadowColor="#ffffff"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="â‚¹10000"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/circle_bg">

                            <ImageView
                                android:id="@+id/ivIcon1"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:src="@drawable/plcholder_bg" />

                            <TextView
                                android:id="@+id/tvFst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toRightOf="@+id/ivIcon1"
                                android:maxLines="1"
                                android:paddingRight="10dp"
                                android:shadowColor="#DFB032"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="2nd"
                                android:textColor="#FBBE1C"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tvName1"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_toEndOf="@+id/tvFst"
                                android:layout_toRightOf="@+id/ivIcon1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:shadowColor="#ffffff"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="Vimal"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tvScore"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/tvName1"
                                android:layout_toRightOf="@+id/ivIcon1"
                                android:maxLines="1"
                                android:shadowColor="#DFB032"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="526"
                                android:textColor="#FBBE1C"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/tvScore"
                                android:layout_toRightOf="@+id/ivIcon1"
                                android:maxLines="1"
                                android:shadowColor="#ffffff"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6"
                                android:text="â‚¹0"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/button_small_yellow"
                            android:gravity="center"
                            android:text="GO TO LOBBY"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="?actionBarItemBackground"
            app:lottie_autoPlay="true"
            android:rotation="90"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim4" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="?actionBarItemBackground"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim4" />
    </LinearLayout>
</RelativeLayout>